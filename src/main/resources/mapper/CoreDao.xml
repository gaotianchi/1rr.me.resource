<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gaotianchi.wtf.dao.CoreDao">
    <update id="updateLinkCoreByCode">
        UPDATE link
        <set>
            <if test="expiredAt != null">
                expired_at = #{expiredAt},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
        </set>
        WHERE code = #{code}
    </update>
    <delete id="deleteLinkCoreByCode">
        DELETE
        FROM link
        WHERE code = #{code}
    </delete>
    <select id="getLinkCoreByCode" resultType="me._1rr.resource.dto.LinkDto">
        SELECT original_url, expired_at, password
        FROM link
        WHERE code = #{code}
    </select>
</mapper>